<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controlling">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Talking Hands"
        android:textSize="30dp"
        android:layout_centerInParent="true"
        android:id="@+id/text"/>
    <TextView
        android:layout_below="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pitch"
        android:textSize="16sp"
        android:id="@+id/pitch_id"/>
    <SeekBar
        android:id="@+id/seek_bar_pitch"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:progress="50"
        android:layout_below="@+id/pitch_id"/>
    <TextView
        android:layout_below="@+id/seek_bar_pitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed"
        android:textSize="16sp"
        android:id="@+id/speed_text_id"/>
    <SeekBar
        android:layout_below="@+id/speed_text_id"
        android:id="@+id/seek_bar_speed"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:progress="50"/>

</RelativeLayout>